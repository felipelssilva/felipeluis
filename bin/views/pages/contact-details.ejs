<h1>
    <a href="/secure/contacts/" class="btn btn-link"> <i class="fas fa-chevron-left"></i></a>
    Detalhes do contato
</h1>

<div class="my-5 js-contact-detail">
    <i class="fas fa-circle-notch fa-spin fa-3x"></i>
</div>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        const $doc = $(document),
            contactsContainer = $doc.find('.js-contact-detail');

        $.ajax({
            type: 'GET',
            url: "/api/contacts/<%= id %>",
        })
            .done(function (data) {
                contactsContainer.html(bodyHtml(data));
            })
            .fail(function (err) {
                console.error(err);
            })
            .always(function () {
            });
    });

    function bodyHtml(handler) {
        let options = {
            day: 'numeric',
            month: 'numeric',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
        };
        let date = new Date(handler.date).toLocaleDateString('pt-br', options);

        const html = `
            <div>
                <p>
                    <strong>Nome</strong> <br>
                    ${handler.name}
                </p>
            </div>
            <div>
                <p>
                    <strong>Email</strong> <br>
                    ${handler.email}
                </p>
            </div>
            <div>
                <p>
                    <strong>Assunto</strong> <br>
                    ${handler.subject}
                </p>
            </div>
            <div>
                <p>
                    <strong>Data</strong> <br>
                    ${!!handler.date ? date : '-'}
                </p>
            </div>
            <div>
                <p>
                    <strong>Message</strong> <br>
                    ${handler.message}
                </p>
            </div>
        `;

        return html;
    }

</script>