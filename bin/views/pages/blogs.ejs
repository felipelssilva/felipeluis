<h1>Blogs</h1>

<div class="my-5 js-blogs-list">
    <i class="fas fa-circle-notch fa-spin fa-3x"></i>
</div>

<script type="text/javascript">

    document.addEventListener("DOMContentLoaded", function () {
        const $doc = $(document),
            contactsContainer = $doc.find('.js-blogs-list');

        $.ajax({
            type: 'GET',
            url: "/api/blogs",
        })
            .done(function (data) {
                let html = `<div><table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Titulo</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table></div>`;

                let tbody = '';

                data.forEach(element => {
                    let btn = getHtmlActions(element);
                    let options = {
                        day: 'numeric',
                        month: 'numeric',
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                    };
                    let date = new Date(Number(element.date)).toLocaleDateString('pt-br', options);

                    tbody += `
                    <tr>
                        <td>${element.title}</td>
                        <td>${!!element.date ? date : '-'}</td>
                        <td>${btn}</td>
                    </tr>`;

                });

                html = $(html).find('tbody').html(tbody).parents('div').html();
                contactsContainer.html(html);

            })
            .fail(function (err) {
                console.error(err);
            })
            .always(function () {
                contactsContainer.find('table').DataTable();
            });
    });

    function getHtmlActions(data) {
        const btn = `
        <a class="btn btn-link" href="/secure/blogs/${data._id}" title="Abrir"><i class="far fa-eye"></i></a>
        <a class="btn btn-link" href="/secure/blogs/${data._id}/edit" title="Editar"><i class="far fa-edit"></i></a>
        <a class="btn btn-link text-danger" href="/secure/blogs/${data._id}/delete" title="Deletar"><i class="far fa-trash-alt"></i></a>
        `;
        return btn;
    }

</script>